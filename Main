            for i in s:
        
                # Comparing the current word
                # with the word to be searched
                if (i == "Arduino"):

                    get_com = portList[0]

                    num = ""
                    for c in get_com:
                        if c.isdigit():
                            num = num + c
                    
                    if (int(num) > 10) and (int(num) < 100):
                        first_1 = int(str(num)[:1])
                        num = first_1

                    if int(num) > 99:
                        first_2 = int(str(num)[:2])
                        num = first_2


                    ser.baudrate = 9600
                    portVar = "COM" + str(num)
                    ser.port = portVar
                    ser.open()


        self.clear_camera_buffer()
        
